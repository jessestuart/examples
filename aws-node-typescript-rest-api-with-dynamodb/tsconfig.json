/* { */
/*   "compilerOptions": { */
/*     "target": "es6", */
/*     "module": "commonjs" */
/*   }, */
/*   "exclude": ["node_modules"], */
/*   "types": ["node", "aws-sdk"] */
/* } */

{
  "include": ["./todos/*.ts"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": ["esnext", "es5"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": { "*": ["./todos/*"] },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5"
  }
}
